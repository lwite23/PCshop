        <TextBox Name="TBart" HorizontalAlignment="Left" Margin="320,31,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="179" Height="30"/>
        <TextBox Name="TBname" HorizontalAlignment="Left" Margin="320,65,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="179" Height="30"/>
        <TextBox Name="TBgar" HorizontalAlignment="Left" Margin="320,100,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="179" Height="30"/>
        <TextBox Name="TBprice" HorizontalAlignment="Left" Margin="320,135,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180" Height="30"/>
        <TextBox Name="TBdes" HorizontalAlignment="Left" Margin="320,170,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="416" Height="136"/>
        <Button HorizontalAlignment="Left" Background="White"
                Margin="23,5,0,21"
                Content="Назад"
                Click="BtnBack_Click" Grid.Row="0" Width="70"/>
