                    Name="bsave"
                    Grid.Row="1"                  
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Click="BtnSave_Click"
                    Content="Сохранить" Margin="0,311,0,0" Width="158"/>
