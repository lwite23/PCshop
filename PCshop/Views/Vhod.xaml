<Page x:Class="PCshop.Vhod"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PCshop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Border Background="#F5FCCD">
        
        <Grid>

            <Grid.RowDefinitions>

                <RowDefinition Height="2*"></RowDefinition>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Margin="10,0,0,208" FontSize="30" HorizontalAlignment="Left">Вход</TextBlock>
            <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel RenderTransformOrigin="0.504,0.715" Width="179">
                    <TextBlock Margin="5,5,5,0">Логин</TextBlock>
                    <TextBox Tag="Логин" Margin="10,0,10,10" x:Name="TBLogin" Height="23" Width="150"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Margin="5,5,5,0">Пароль</TextBlock>
                    <TextBox x:Name="TBPassword" Margin="10,0,10,10" Height="23" Width="150"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">

                    <Button Click="BtnSignIn_Click"
                        Content="Войти" Height="40" Width="160" Margin="10,10,10,2" RenderTransformOrigin="0.519,1.071"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBox Height="40" Width="160" Margin="10" FontSize="24"  IsEnabled="False" FontFamily="Chiller" FontWeight="Bold" Name="CaptchaText" Text="ABCDef" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FF65778D" TextAlignment="Center" TextChanged="CaptchaText_TextChanged">
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Images/CaptchaBack.png"/>
                        </TextBox.Background>
                        <TextBox.Style>
                            <Style  TargetType="{x:Type TextBox}" >
                                <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"/>
                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type TextBox}">
                                            <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                                <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>

                    </TextBox>


                </StackPanel>
                <StackPanel Orientation="Horizontal">

                    <Button  Name="ResetCaptchaButton"  Margin="10,0,0,0" Width="160" HorizontalContentAlignment="Center" Click="ResetCaptchaButton_Click" FontFamily="segoe ui" FontSize="13" FontWeight="Normal">
                        <StackPanel>
                            <Image Source="/Images/Refresh.png" Stretch="Uniform" Height="30"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>

        </Grid>
    </Border>


</Page>
