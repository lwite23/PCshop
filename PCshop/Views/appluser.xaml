<Page x:Class="PCshop.Views.appluser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PCshop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="appluser">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Image Name="PCimage" Height="200" Width="200" Source="{Binding CorrectImage}"/>
            </StackPanel>

            <Grid  Grid.Row="1"/>
            <Button HorizontalAlignment="Right" Grid.Row="1" x:Name="BtnBack" Click="BtnBack_Click" Content="Назад"/>
            <Button x:Name="BtnSend" Click="BtnSend_Click" Content="Отправить" Grid.ColumnSpan="2" HorizontalAlignment="Left" Grid.Row="1"/>
            <TextBlock Name="TBart" HorizontalAlignment="Left" Margin="270,65,0,0" TextWrapping="Wrap" Text="{Binding Article}" VerticalAlignment="Top" Height="28" Width="90"/>
        <ComboBox Name="TBqwe" Margin="100,-100,0,0" Width="123" Height="97"/>
    </Grid>
</Page>
